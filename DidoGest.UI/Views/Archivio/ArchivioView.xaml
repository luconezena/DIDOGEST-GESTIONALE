<UserControl x:Class="DidoGest.UI.Views.Archivio.ArchivioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Archiviazione Documentale" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="300" materialDesign:HintAssist.Hint="Cerca documento..." 
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"
                     TextChanged="SearchBox_TextChanged"/>
            <Button Content="Nuovo Documento" Click="BtnNuovo_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
                <Button Content="Apri file" Click="BtnApri_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Elimina" Click="BtnElimina_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="ArchivioDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                  MouseDoubleClick="ArchivioDataGrid_MouseDoubleClick"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Protocollo" Binding="{Binding Protocollo}" Width="120"/>
                <DataGridTextColumn Header="Data" Binding="{Binding DataDocumento, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Titolo" Binding="{Binding Titolo}" Width="300"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoDocumento}" Width="150"/>
                <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="150"/>
                <DataGridTextColumn Header="File" Binding="{Binding NomeFile}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Totale documenti archiviati: " FontWeight="Bold"/>
            <TextBlock x:Name="TotaleDocumenti" Text="0"/>
        </StackPanel>
    </Grid>
</UserControl>
