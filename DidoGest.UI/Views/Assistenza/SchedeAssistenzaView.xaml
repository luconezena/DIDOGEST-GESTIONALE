<UserControl x:Class="DidoGest.UI.Views.Assistenza.SchedeAssistenzaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Schede Assistenza" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <DockPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" Width="300" Margin="0,0,10,0"
                     materialDesign:HintAssist.Hint="Cerca (cliente, titolo, descrizione, numero)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     TextChanged="SearchTextBox_TextChanged"/>
            <Button DockPanel.Dock="Right" Content="Nuova" Margin="0,0,10,0" Click="BtnNuova_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button DockPanel.Dock="Right" Content="Modifica" Margin="0,0,10,0" Click="BtnModifica_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button DockPanel.Dock="Right" Content="Elimina" Click="BtnElimina_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </DockPanel>

        <DataGrid Grid.Row="2" x:Name="SchedeDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" SelectionMode="Single"
                  MouseDoubleClick="SchedeDataGrid_MouseDoubleClick"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Numero" Binding="{Binding NumeroScheda}" Width="140"/>
                <DataGridTextColumn Header="Data Apertura" Binding="{Binding DataApertura, StringFormat=dd/MM/yyyy}" Width="140"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.RagioneSociale}" Width="220"/>
                <DataGridTextColumn Header="Prodotto" Binding="{Binding DescrizioneProdotto}" Width="*"/>
                <DataGridTextColumn Header="Stato" Binding="{Binding StatoLavorazione}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
