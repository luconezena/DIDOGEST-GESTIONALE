<UserControl x:Class="DidoGest.UI.Views.Magazzino.ListiniView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Listini Prezzi" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="300" materialDesign:HintAssist.Hint="Cerca listino..." 
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"
                     TextChanged="SearchBox_TextChanged"/>
            <Button Content="Nuovo" Click="BtnNuovo_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Modifica" Click="BtnModifica_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Prezzi" Click="BtnPrezzi_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Elimina" Click="BtnElimina_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="ListiniDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                  MouseDoubleClick="ListiniDataGrid_MouseDoubleClick"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Codice" Binding="{Binding Codice}" Width="120"/>
                <DataGridTextColumn Header="Descrizione" Binding="{Binding Descrizione}" Width="320"/>
                <DataGridTextColumn Header="Inizio" Binding="{Binding DataInizioValidita, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Fine" Binding="{Binding DataFineValidita, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridCheckBoxColumn Header="Attivo" Binding="{Binding Attivo}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Totale listini: " FontWeight="Bold"/>
            <TextBlock x:Name="TotaleListini" Text="0"/>
        </StackPanel>
    </Grid>
</UserControl>
