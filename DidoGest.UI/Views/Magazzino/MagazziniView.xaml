<UserControl x:Class="DidoGest.UI.Views.Magazzino.MagazziniView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Anagrafica Magazzini" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="300" materialDesign:HintAssist.Hint="Cerca magazzino..." 
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"
                     TextChanged="SearchBox_TextChanged"/>
            <Button Content="Nuovo" Click="BtnNuovo_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Modifica" Click="BtnModifica_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Elimina" Click="BtnElimina_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="MagazziniDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                  MouseDoubleClick="MagazziniDataGrid_MouseDoubleClick"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Codice" Binding="{Binding Codice}" Width="100"/>
                <DataGridTextColumn Header="Descrizione" Binding="{Binding Descrizione}" Width="250"/>
                <DataGridTextColumn Header="CittÃ " Binding="{Binding Citta}" Width="150"/>
                <DataGridCheckBoxColumn Header="Principale" Binding="{Binding Principale}" Width="100"/>
                <DataGridCheckBoxColumn Header="Attivo" Binding="{Binding Attivo}" Width="80"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Totale magazzini: " FontWeight="Bold"/>
            <TextBlock x:Name="TotaleMagazzini" Text="0"/>
        </StackPanel>
    </Grid>
</UserControl>
