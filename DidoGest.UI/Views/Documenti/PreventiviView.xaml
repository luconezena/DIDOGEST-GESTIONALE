<UserControl x:Class="DidoGest.UI.Views.Documenti.PreventiviView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Preventivi" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="300" materialDesign:HintAssist.Hint="Cerca..." 
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"
                     TextChanged="SearchBox_TextChanged"/>
            <Button Content="Nuovo" Click="BtnNuovo_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Modifica" Click="BtnModifica_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Converti in ordine" Click="BtnConvertiInOrdine_Click" 
                Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0"/>
            <Button Content="Elimina" Click="BtnElimina_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="PreventiviDataGrid" AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                  MouseDoubleClick="PreventiviDataGrid_MouseDoubleClick"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Numero" Binding="{Binding NumeroDocumento}" Width="130"/>
                <DataGridTextColumn Header="Data" Binding="{Binding DataDocumento, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.RagioneSociale}" Width="280"/>
                <DataGridTextColumn Header="Imponibile" Binding="{Binding Imponibile, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="IVA" Binding="{Binding IVA, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="Totale" Binding="{Binding Totale, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Preventivi: " FontWeight="Bold"/>
            <TextBlock x:Name="Totale" Text="0"/>
        </StackPanel>
    </Grid>
</UserControl>
