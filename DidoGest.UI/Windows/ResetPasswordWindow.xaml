<Window x:Class="DidoGest.UI.Windows.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Reimposta password (SuperAdmin)" Height="420" Width="600" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

    <TextBlock Text="Reimposta password utente" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <TextBox x:Name="TxtSuperUser" Grid.Row="1" Margin="0,0,0,10"
                 materialDesign:HintAssist.Hint="SuperAdmin (es. superadmin)"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        <PasswordBox x:Name="PwdSuper" Grid.Row="2" Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="Password SuperAdmin"/>

        <TextBox x:Name="TxtTarget" Grid.Row="3" Margin="0,0,0,10"
                 materialDesign:HintAssist.Hint="Utente da reimpostare (es. admin)"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        <PasswordBox x:Name="PwdNew" Grid.Row="4" Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="Nuova password"/>

        <TextBlock x:Name="LblError" Grid.Row="5" Foreground="DarkRed" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Chiudi" Click="BtnClose_Click" Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="Reimposta" Click="BtnReset_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</Window>
