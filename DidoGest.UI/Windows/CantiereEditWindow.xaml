<Window x:Class="DidoGest.UI.Windows.CantiereEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Cantiere" Height="620" Width="820" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Cantiere" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Grid.Column="0" x:Name="TxtCodice" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Codice cantiere" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="CmbCliente" Margin="0,0,0,10"
                          materialDesign:HintAssist.Hint="Cliente" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <TextBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="TxtDescrizione" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Descrizione" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="2" Grid.Column="0" x:Name="TxtIndirizzo" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Indirizzo" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="TxtCitta" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="CittÃ " Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,10">
                    <DatePicker x:Name="DpInizio" Width="200"/>
                    <TextBlock Text="   " />
                    <DatePicker x:Name="DpFine" Width="200"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="TxtImporto" Width="200" Margin="0,0,10,0"
                             materialDesign:HintAssist.Hint="Importo preventivato" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    <TextBox x:Name="TxtResponsabile" Width="240"
                             materialDesign:HintAssist.Hint="Responsabile" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </StackPanel>

                <TextBox Grid.Row="4" Grid.Column="0" x:Name="TxtCosti" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Costi sostenuti" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="TxtRicavi" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Ricavi maturati" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="5" Grid.Column="0" x:Name="TxtStato" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Stato cantiere" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="6" Grid.ColumnSpan="2" x:Name="TxtNote" Height="140" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Note" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annulla" Margin="0,0,10,0" Click="BtnAnnulla_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="Salva" Click="BtnSalva_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
