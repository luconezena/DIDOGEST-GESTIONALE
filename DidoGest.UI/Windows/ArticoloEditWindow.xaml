<Window x:Class="DidoGest.UI.Windows.ArticoloEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Articolo" Height="720" Width="900" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Articolo" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Grid.Column="0" x:Name="TxtCodice" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Codice" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtEAN" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Codice EAN" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="TxtDescrizione" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Descrizione" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="2" Grid.ColumnSpan="2" x:Name="TxtDescrizioneEstesa" Margin="0,0,0,10" Height="90" AcceptsReturn="True" TextWrapping="Wrap"
                         materialDesign:HintAssist.Hint="Descrizione estesa" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="3" Grid.Column="0" x:Name="TxtCategoria" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Categoria" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="TxtSottocategoria" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Sottocategoria" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="4" Grid.Column="0" x:Name="TxtMarca" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Marca" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="TxtUM" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="UnitÃ  di misura" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="5" Grid.Column="0" x:Name="TxtPrezzoAcquisto" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Prezzo acquisto" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="TxtPrezzoVendita" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Prezzo vendita" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="6" Grid.Column="0" x:Name="TxtAliquota" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Aliquota IVA (%)" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="TxtScortaMinima" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Scorta minima" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <ComboBox Grid.Row="7" Grid.ColumnSpan="2" x:Name="CmbFornitore" Margin="0,0,0,10"
                          materialDesign:HintAssist.Hint="Fornitore predefinito" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <WrapPanel Grid.Row="8" Grid.ColumnSpan="2" Margin="0,0,0,10">
                    <CheckBox x:Name="ChkAttivo" Content="Attivo" Margin="0,0,20,0"/>
                    <CheckBox x:Name="ChkLotti" Content="Gestione lotti" Margin="0,0,20,0"/>
                    <CheckBox x:Name="ChkSeriali" Content="Gestione numeri serie" Margin="0,0,20,0"/>
                    <CheckBox x:Name="ChkServizio" Content="Articolo di servizio"/>
                </WrapPanel>

                <TextBox Grid.Row="9" Grid.ColumnSpan="2" x:Name="TxtNote" Height="120" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Note" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annulla" Margin="0,0,10,0" Click="BtnAnnulla_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="Salva" Click="BtnSalva_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
