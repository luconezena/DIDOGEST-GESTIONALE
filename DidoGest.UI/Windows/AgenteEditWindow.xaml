<Window x:Class="DidoGest.UI.Windows.AgenteEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Agente" Height="650" Width="650" WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Dati Agente" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBox x:Name="TxtCodice" materialDesign:HintAssist.Hint="Codice*" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="TxtNome" materialDesign:HintAssist.Hint="Nome*" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" x:Name="TxtCognome" materialDesign:HintAssist.Hint="Cognome*" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </Grid>

                <TextBox x:Name="TxtEmail" materialDesign:HintAssist.Hint="Email" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="TxtTelefono" materialDesign:HintAssist.Hint="Telefono" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" x:Name="TxtCellulare" materialDesign:HintAssist.Hint="Cellulare" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </Grid>

                <TextBox x:Name="TxtPercentuale" materialDesign:HintAssist.Hint="Provvigione %" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <CheckBox x:Name="ChkAttivo" Content="Agente attivo" IsChecked="True"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Salva" Click="BtnSalva_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Annulla" Click="BtnAnnulla_Click" 
                    Style="{StaticResource MaterialDesignOutlinedButton}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
