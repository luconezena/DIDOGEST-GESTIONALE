<Window x:Class="DidoGest.UI.Windows.MovimentoMagazzinoEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Movimento Magazzino" Height="650" Width="650" WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Nuovo Movimento" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ComboBox x:Name="CmbTipo" Margin="0,0,0,15" 
                          materialDesign:HintAssist.Hint="Tipo movimento" 
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <ComboBox x:Name="CmbMagazzino" Margin="0,0,0,15" 
                          materialDesign:HintAssist.Hint="Magazzino" 
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <ComboBox x:Name="CmbArticolo" Margin="0,0,0,15" 
                          materialDesign:HintAssist.Hint="Articolo" 
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <TextBox x:Name="TxtQuantita" materialDesign:HintAssist.Hint="QuantitÃ " 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <TextBox x:Name="TxtCosto" materialDesign:HintAssist.Hint="Costo unitario" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <DatePicker x:Name="DpData" Margin="0,0,0,15"/>

                <TextBox x:Name="TxtNumeroDocumento" materialDesign:HintAssist.Hint="Numero documento (opz.)" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <TextBox x:Name="TxtCausale" materialDesign:HintAssist.Hint="Causale" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <TextBox x:Name="TxtNote" materialDesign:HintAssist.Hint="Note" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" AcceptsReturn="True" Height="120"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Salva" Click="BtnSalva_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Annulla" Click="BtnAnnulla_Click" 
                    Style="{StaticResource MaterialDesignOutlinedButton}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
