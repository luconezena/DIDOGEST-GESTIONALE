<Window x:Class="DidoGest.UI.Windows.DocumentoArchivioEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Documento Archivio" Height="640" Width="940" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Archiviazione documento" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Grid.Column="0" x:Name="TxtProtocollo" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Protocollo" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <DatePicker Grid.Row="0" Grid.Column="1" x:Name="DpData" Width="200" Margin="0,0,0,10"/>

                <TextBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="TxtTitolo" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Titolo" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="2" Grid.Column="0" x:Name="TxtCategoria" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Categoria" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="TxtTags" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Tags" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="TxtFile" Width="720" IsReadOnly="True"
                             materialDesign:HintAssist.Hint="File" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    <Button Content="Sfoglia..." Margin="10,0,0,0" Click="BtnSfoglia_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>

                <TextBox Grid.Row="4" Grid.ColumnSpan="2" x:Name="TxtDescrizione" Height="90" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Descrizione" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="5" Grid.ColumnSpan="2" x:Name="TxtNote" Height="120" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Note" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annulla" Margin="0,0,10,0" Click="BtnAnnulla_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="Salva" Click="BtnSalva_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
