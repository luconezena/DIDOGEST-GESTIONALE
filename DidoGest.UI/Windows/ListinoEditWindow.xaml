<Window x:Class="DidoGest.UI.Windows.ListinoEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Listino" Height="650" Width="650" WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Dati Listino" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBox x:Name="TxtCodice" materialDesign:HintAssist.Hint="Codice*" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>
                <TextBox x:Name="TxtDescrizione" materialDesign:HintAssist.Hint="Descrizione*" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DatePicker Grid.Column="0" x:Name="DpInizio" Margin="0,0,10,0"/>
                    <DatePicker Grid.Column="1" x:Name="DpFine"/>
                </Grid>

                <CheckBox x:Name="ChkAttivo" Content="Listino attivo" IsChecked="True" Margin="0,0,0,10"/>

                <TextBox x:Name="TxtNote" materialDesign:HintAssist.Hint="Note" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15" AcceptsReturn="True" Height="120"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Salva" Click="BtnSalva_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Annulla" Click="BtnAnnulla_Click" 
                    Style="{StaticResource MaterialDesignOutlinedButton}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
