<Window x:Class="DidoGest.UI.Windows.SchedaAssistenzaEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Scheda Assistenza" Height="620" Width="780" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Scheda Assistenza" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Grid.Column="0" x:Name="TxtNumero" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Numero" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <DatePicker Grid.Row="0" Grid.Column="1" x:Name="DpDataApertura" Margin="0,0,0,10"/>

                <ComboBox Grid.Row="1" Grid.Column="0" x:Name="CmbCliente" Margin="0,0,10,10"
                          materialDesign:HintAssist.Hint="Cliente" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CmbStato" Margin="0,0,0,10"
                          materialDesign:HintAssist.Hint="Stato lavorazione" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <TextBox Grid.Row="2" Grid.Column="0" x:Name="TxtProdotto" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Descrizione prodotto" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="TxtMatricola" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Matricola" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="3" Grid.Column="0" x:Name="TxtModello" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Modello" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="TxtTecnico" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Tecnico assegnato" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="4" Grid.ColumnSpan="2" x:Name="TxtDifetto" Height="110" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Difetto dichiarato" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Grid.Row="5" Grid.ColumnSpan="2" x:Name="TxtNote" Height="120" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Note" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annulla" Margin="0,0,10,0" Click="BtnAnnulla_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="Salva" Click="BtnSalva_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
