<Window x:Class="DidoGest.UI.Windows.ContrattoEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Contratto" Height="680" Width="860" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Contratto" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Grid.Column="0" x:Name="TxtNumero" Margin="0,0,10,10"
                         materialDesign:HintAssist.Hint="Numero Contratto" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="CmbCliente" Margin="0,0,0,10"
                          materialDesign:HintAssist.Hint="Cliente" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <TextBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="TxtDescrizione" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Descrizione" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,10">
                    <DatePicker x:Name="DpInizio" Width="200"/>
                    <TextBlock Text="   " />
                    <DatePicker x:Name="DpFine" Width="200"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="TxtImporto" Width="200" Margin="0,0,10,0"
                             materialDesign:HintAssist.Hint="Importo" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    <TextBox x:Name="TxtCostoExtra" Width="200"
                             materialDesign:HintAssist.Hint="Costo Orario Extra" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </StackPanel>

                <ComboBox Grid.Row="3" Grid.Column="0" x:Name="CmbTipo" Margin="0,0,10,10"
                          materialDesign:HintAssist.Hint="Tipo Contratto" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="CmbStato" Margin="0,0,0,10"
                          materialDesign:HintAssist.Hint="Stato" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="TxtMonteOreAcq" Width="200" Margin="0,0,10,0"
                             materialDesign:HintAssist.Hint="Monte ore acquistato" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    <TextBox x:Name="TxtMonteOreRes" Width="200" Margin="0,0,10,0"
                             materialDesign:HintAssist.Hint="Monte ore residuo" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    <TextBox x:Name="TxtFreq" Width="240"
                             materialDesign:HintAssist.Hint="Frequenza fatturazione" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </StackPanel>

                <DatePicker Grid.Row="5" Grid.Column="0" x:Name="DpProssimaFatt" Margin="0,0,10,10"/>

                <TextBox Grid.Row="6" Grid.ColumnSpan="2" x:Name="TxtNote" Height="160" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"
                         materialDesign:HintAssist.Hint="Note" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annulla" Margin="0,0,10,0" Click="BtnAnnulla_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="Salva" Click="BtnSalva_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
