<Window x:Class="DidoGest.UI.Windows.RegistrazioneContabileEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Registrazione Contabile" Height="520" Width="760" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Registrazione contabile" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DatePicker Grid.Row="0" Grid.Column="0" x:Name="DpData" Width="200" Margin="0,0,10,10"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtNumero" Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="Numero registrazione" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

            <TextBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="TxtCausale" Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="Causale" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

            <TextBox Grid.Row="2" Grid.ColumnSpan="2" x:Name="TxtDescrizione" Margin="0,0,0,10" Height="90" AcceptsReturn="True" TextWrapping="Wrap"
                     materialDesign:HintAssist.Hint="Descrizione" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

            <TextBox Grid.Row="3" Grid.Column="0" x:Name="TxtDare" Margin="0,0,10,10"
                     materialDesign:HintAssist.Hint="Totale Dare" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="TxtAvere" Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="Totale Avere" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

            <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Text="Nota: questa Ã¨ una registrazione semplificata (totali Dare/Avere)." Opacity="0.7"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annulla" Margin="0,0,10,0" Click="BtnAnnulla_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="Salva" Click="BtnSalva_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
